@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <form action="@Url.Action("List")" method="post" enctype="multipart/form-data" class="form-horizontal">
        <div class="form-group">
            <label for="myfile">Upload the Excel File</label>
            <input type="file" name="myfile" id="myfile" />
        </div>
        <div class="form-group">
            <label>Please use this file as a template</label>
            <a href="~/Template.xlsx">Template</a>
        </div>
        <input type="submit" />
    </form>
</div>